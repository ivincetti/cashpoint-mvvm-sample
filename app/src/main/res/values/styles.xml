<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetStyle" />

    <style name="BottomSheetStyle.Text">
        <item name="android:textSize">@dimen/bottom_sheet_text_size</item>
    </style>

    <style name="BottomSheetStyle.TextSub">
        <item name="android:textSize">@dimen/bottom_sheet_sub_text_size</item>
    </style>

    <style name="BottomSheetStyle.Separator">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DetailsStyle" />

    <style name="DetailsStyle.Text">
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <style name="DetailsStyle.TextSub">
        <item name="android:textSize">@dimen/details_sub_text_size</item>
    </style>

    <style name="DetailsStyle.Separator">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ListItemStyle" />

    <style name="ListItemStyle.Text">
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <style name="ListItemStyle.TextSub">
        <item name="android:textSize">@dimen/details_sub_text_size</item>
    </style>

</resources>
